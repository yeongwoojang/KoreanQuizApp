<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.mvvmproject.viewmodel.KoreanQuizVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.QuizActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brwon50">

            <ImageButton
                android:id="@+id/back_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/baseline_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/be_euljiro"
                android:text="@{viewModel.scoreLiveData.toString()}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/be_euljiro"
                android:text="점" />
            <TextView
                android:id="@+id/quiz_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/be_euljiro"
                android:text="@{viewModel.quizNoLiveData}" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/quiz_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/be_euljiro"
                    android:text="@{viewModel.quizLiveData[viewModel.quizIndexLiveData].q_name}"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/be_euljiro"
                        android:text="일번."
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/quiz_no1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/be_euljiro"
                        android:text="@{viewModel.quizLiveData[viewModel.quizIndexLiveData].a_name}"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/be_euljiro"
                        android:text="이번."
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/quiz_no2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/be_euljiro"
                        android:text="@{viewModel.quizLiveData[viewModel.quizIndexLiveData+1].a_name}"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/be_euljiro"
                        android:text="삼번."
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/quiz_no3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/be_euljiro"
                        android:text="@{viewModel.quizLiveData[viewModel.quizIndexLiveData+2].a_name}"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="@font/be_euljiro"
                        android:text="사번"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/quiz_no4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/be_euljiro"
                        android:text="@{viewModel.quizLiveData[viewModel.quizIndexLiveData+3].a_name}"
                        android:textColor="@color/black"
                        android:layout_marginBottom="50dp"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageButton
                        android:id="@+id/oneBt"
                        android:tag="@{viewModel.quizLiveData[viewModel.quizIndexLiveData].a_name}"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="@{()->viewModel.isCorrectAnswer(viewModel.quizLiveData[viewModel.quizIndexLiveData].a_name)}"
                        android:scaleType="fitXY"
                        android:background="@color/transparent"
                        android:src="@drawable/baseline_looks_one_24"
                    />

                    <ImageButton
                        android:id="@+id/twoBt"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/transparent"
                        android:onClick="@{()->viewModel.isCorrectAnswer(viewModel.quizLiveData[viewModel.quizIndexLiveData+1].a_name)}"
                        android:scaleType="fitXY"
                        android:src="@drawable/baseline_looks_two_24"
                        android:tag="@{viewModel.quizLiveData.get(viewModel.quizIndexLiveData).a_name}" />

                    <ImageButton
                        android:id="@+id/threeBt"
                        android:tag="@{viewModel.quizLiveData[viewModel.quizIndexLiveData+2].a_name}"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="@{()->viewModel.isCorrectAnswer(viewModel.quizLiveData[viewModel.quizIndexLiveData+2].a_name)}"
                        android:scaleType="fitXY"
                        android:background="@color/transparent"
                        android:src="@drawable/baseline_looks_3_24"
                      />
                    <ImageButton
                        android:id="@+id/fourBt"
                        android:tag="@{viewModel.quizLiveData[viewModel.quizIndexLiveData+3].a_name}"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="@{()->viewModel.isCorrectAnswer(viewModel.quizLiveData[viewModel.quizIndexLiveData+3].a_name)}"
                        android:scaleType="fitXY"
                        android:background="@color/transparent"
                        android:src="@drawable/baseline_looks_4_24"
                      />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
