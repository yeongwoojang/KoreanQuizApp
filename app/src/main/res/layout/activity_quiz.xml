<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.mvvmproject.viewmodel.KoreanQuizVM" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.QuizActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brwon50"
        >
        <ImageButton
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_back_24"
            android:background="@color/transparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점수"
            android:layout_gravity="center"
            android:fontFamily="@font/be_euljiro"
            />
        <TextView
            android:id="@+id/quiz_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문제100"
            android:fontFamily="@font/be_euljiro"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/quiz_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/be_euljiro"
                android:text="@{viewModel.quizLiveData.get(0).q_name}"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보기1"
                android:fontFamily="@font/be_euljiro"
                android:textColor="@color/black"
                android:layout_weight="7"
                ></TextView>
            <TextView
                android:id="@+id/quiz_no1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/be_euljiro"
                android:text="@{viewModel.quizLiveData.get(0).a_name}"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보기2"
                android:fontFamily="@font/be_euljiro"
                android:textColor="@color/black"
                android:layout_weight="7"
                ></TextView>
            <TextView
                android:id="@+id/quiz_no2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/be_euljiro"
                android:text="@{viewModel.quizLiveData.get(1).a_name}"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보기3"
                android:fontFamily="@font/be_euljiro"
                android:textColor="@color/black"
                android:layout_weight="7"
                ></TextView>
            <TextView
                android:id="@+id/quiz_no3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/be_euljiro"
                android:text="@{viewModel.quizLiveData.get(2).a_name}"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보기4"
                android:fontFamily="@font/be_euljiro"
                android:textColor="@color/black"
                android:layout_weight="7"
                ></TextView>
            <TextView
                android:id="@+id/quiz_no4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_euljiro"
                android:text="@{viewModel.quizLiveData.get(3).a_name}"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15dp"/>
        </LinearLayout>
        </LinearLayout>
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recyclerview"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            ></androidx.recyclerview.widget.RecyclerView>-->
    </androidx.cardview.widget.CardView>

</LinearLayout>
</layout>
