<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_registerpage"
    android:orientation="vertical"
    tools:context=".view.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_check_circle_outline_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/be_euljiro"
            android:gravity="center"
            android:text="@string/register_comment"
            android:textColor="@color/gray50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/rg_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/gray50"
            android:fontFamily="@font/be_euljiro"
            android:hint="이름"
            android:textColorHint="@color/gray50" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            >

            <EditText
                android:id="@+id/rg_id_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:backgroundTint="@color/gray50"
                android:fontFamily="@font/be_euljiro"
                android:hint="아이디"
                android:textColorHint="@color/gray50" />

            <Button
                android:id="@+id/id_chk_bt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/appMainColor"
                android:fontFamily="@font/be_euljiro"
                android:text="중복확인"
                android:layout_gravity="end|center_vertical"
                android:textColor="@color/gray50">
            </Button>
        </FrameLayout>

        <EditText
            android:id="@+id/rg_pw_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/gray50"
            android:fontFamily="@font/be_euljiro"
            android:hint="비밀번호"
            android:textColorHint="@color/gray50" />

        <EditText
            android:id="@+id/rg_phone_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/gray50"
            android:fontFamily="@font/be_euljiro"
            android:hint="전화번호"
            android:textColorHint="@color/gray50" />

        <Button
            android:id="@+id/register_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/form_join_button"
            android:fontFamily="@font/be_euljiro"
            android:text="회원가입"
            android:textColor="@color/appMainColor" />

        <TextView
            android:id="@+id/go_to_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/be_euljiro"
            android:gravity="center"
            android:text="@string/go_to_main"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>